<% layout ('/layouts/boilerplate')%>
<div class="row">
    <h3 style="font-weight: 800; color: black;" class="text-center">Register as a job provider today!</h3>
    <div class="card col-6 offset-3 mt-4" style="background-color: darkorange; font-weight: 600; fill-opacity: 0.5;">
    <form class="row g-3" action="/job_providers" method="POST">
        <div class="form-group col-9 offset-1" style="fill-opacity: 1.0;">

        <div class="mb-2 mt-3">
        <label for="org_name">Enter organisation name</label>
        <input class="form-control" type="text" name="org_name" id="org_name" required><br/>
        </div>

        <div class="mb-2">
        <label for="name">Enter full name</label>
        <input class="form-control" type="text" name="name" id="name" required><br/>
        </div>

        <div class="mb-2">
        <label for="phoneNo">Enter mobile number</label>
        <input class="form-control" type="number" name="phoneNo" id="phoneNo required"><br />
        </div>

        <div class="mb-2">
        <label for="email">Enter email address</label>
        <input class="form-control" type="email" name="email" id="email" required><br />
        </div>

        <div class="mb-2">
        <label for="password">Enter password</label>
        <input class="form-control" type="password" name="password" id="password" required><br />
        </div>
 
        <div class="mb-2">
        <label for="vacancies">Enter the number of vacancies in your organisation</label>
        <input class="form-control" type="text" name="vacancies" id="vacancies" required><br />
        </div>

        <div class="mb-2">
        <label for="job_profiles">Enter the job profiles available in your organisation</label>
        <input class="form-control" type="text" name="job_profiles" id="job_profiles" required><br />
        </div>

        <div class="mb-2">
        <label for="total_compensation">Enter the total compensation going to be offered by your organisation</label>
        <input class="form-control" type="number" name="total_compensation" id="total_compensation" required><br />
        </div>

        <div class="mb-3 mt-2">
        <input class="btn btn-dark form-control" type="submit" name="submit" value="Submit" />
        </div>
        </div>
    </form>
    </div>
</div>
