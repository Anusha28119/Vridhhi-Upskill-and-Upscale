<% layout ('/layouts/boilerplate')%>
<div class="row">
    <h3 style="font-weight: 800; color: black;" class="text-center">Register as a job seeker today!</h3>
<div class="card col-6 offset-3 mt-4" style="background-color: darkorange; font-weight: 600; fill-opacity: 0.5;">
    <form class="row g-3" action="/seekers" method="POST">
        <div class="form-group col-9 offset-1" style="fill-opacity: 1.0;">
        
        <div class="mb-2 mt-3">
        <label for="name">Enter full name</label>
        <input class="form-control" type="text" name="name" id="name" required><br />
        </div>

        <div class="mb-2">
        <label for="phoneNo">Enter mobile number</label>
        <input class="form-control" type="number" name="phoneNo" id="phoneNo" required><br />
        </div>

        <div class="mb-2">
        <label for="email">Enter email address (abc@example.com)</label>
        <input class="form-control" type="email" name="email" id="email" required><br />
        </div>

        <div class="mb-2">
        <label for="password">Enter password</label>
        <input class="form-control" type="password" name="password" id="password" required><br />
        </div>

        <div class="mb-2">
        <label for="tenth">Have you completed 10th standard?</label> 
        <input type="radio" name="tenth" id="tenth" value="yes" required>Yes
        <input type="radio" name="tenth" id="tenth" value="no">No<br />
        </div>

        <div class="mb-2">
        <label for="tenth_org">If yes, specify your school</label>
        <input class="form-control" type="text" name="tenth_org" id="tenth_org" ><br />
        </div>

        <div class="mb-2">
        <label for="twelfth">Have you completed 12th standard?</label>
        <input type="radio" name="twelfth" id="twelfth" value="yes" required>Yes
        <input type="radio" name="twelfth" id="twelfth" value="no">No<br />
        </div>

        <div class="mb-2">
        <label for="twelfth_org">If yes, specify your school</label>
        <input class="form-control" type="text" name="twelfth_org" id="twelfth_org"><br />
        </div>

        <div class="mb-2">
        <label for="graduation">Have you completed graduation?</label>
        <input type="radio" name="graduation" id="graduation" value="yes" required>Yes
        <input type="radio" name="graduation" id="graduation" value="no">No<br />
        </div>

        <div class="mb-2">
        <label for="graduation_org">If yes, specify your school</label>
        <input class="form-control" type="text" name="graduation_org" id="graduation_org"><br />
        </div>

        <div class="mb-2">
        <label for="graduation_degree">Enter graduation qualification</label>
        <select class="select-picker form-control" name="graduation_degree" id="graduation_degree">
            <option value="B. Tech" selected>B. Tech</option>
            <option value="BBA">BBA</option>
            <option value="B. Sc">B. Sc</option>
            <option value="MBBS">M.B.B.S.</option>
            <option value="B. Com">B. Com</option>
            <option value="B. Arch">B. Arch</option>
            <option value="other">Others</option>
            <option value="none" selected>None</option>
        </select><br />
        </div>

        <div class="mb-2">
        <label for="post_graduation">Have you completed post-graduation?</label>
        <input type="radio" name="post_graduation" id="post_graduation" value="yes" required>Yes
        <input type="radio" name="post_graduation" id="post_graduation" value="no">No<br />
        </div>

        <div class="mb-2">
        <label for="post_graduation_org">If yes, specify your school</label>
        <input class="form-control" type="text" name="post_graduation_org" id="post_graduation_org"><br />
        </div>

        <div class="mb-2">
        <label for="post_graduation_degree">Enter post-graduation qualification</label>
        <select class="select-picker form-control" id="post_graduation_degree" name="post_graduation_degree">
            <option value="M. Tech" >M. Tech</option>
            <option value="MBA">MBA</option>
            <option value="M. Sc">M. Sc</option>
            <option value="MD">M.D.</option>
            <option value="M. Com">M. Com</option>
            <option value="M. Arch">M. Arch</option>
            <option value="other">Others</option>
            <option value="none" selected>None</option>
        </select><br />
        </div>

        <div class="mb-3">
        <input class="btn btn-dark form-control" type="submit" name="submit" value="Submit" />
        </div>
        </div>
    </form>
    </div>
</div>