<% layout ('/layouts/boilerplate')%>
<div class="row">
    <h3 style="font-weight: 800; color:black;" class="text-center">Enter your job profiles here</h3>
    <div class="card col-6 offset-3 mt-4" style="background-color: darkorange; font-weight: 600; fill-opacity: 0.5;">
    <form class="row g-3" action="/job_provider_profiles" method="POST">
        <div class="form-group col-9 offset-1" style="fill-opacity: 1.0;">

        <div class="mb-2 mt-3">
        <label for="org_name">Enter organisation name</label>
        <input class="form-control" type="text" name="org_name" id="org_name" required><br/>
        </div>

        <div class="mb-2">
        <label for="job_profile">Enter job profile</label>
        <input class="form-control" type="text" name="job_profile" id="job_profile" required><br/>
        </div>

        <div class="mb-2">
        <label for="vacancies">Enter the number of vacancies</label>
        <input class="form-control" type="number" name="vacancies" id="vacancies" required><br />
        </div>

        <div class="mb-2">
        <label for="profile_compensation">Enter the profile compensation (in rupees)</label>
        <input class="form-control" type="number" name="profile_compensation" id="profile_compensation" required><br />
        </div>

        <div class="mb-2">
        <label for="profile_location">Enter the profile location</label>
        <input class="form-control" type="text" name="profile_location" id="profile_location" required><br />
        </div>
 
        <div class="mb-2">
        <label for="brief_overview_of_profile">Enter the brief overview of profile</label>
        <input class="form-control" type="textarea" name="brief_overview_of_profile" id="brief_overview_of_profile" required><br />
        </div>
        
        <div class="mb-2">
        <label for="req_tenth">Should the candidate be 10th pass?</label>
       
        <input type="radio" name="req_tenth" id="req_tenth" value="yes" required>Yes
        <input type="radio" name="req_tenth" id="req_tenth" value="no">No<br />
        </div>

        <div class="mb-2">
        <label for="req_twelfth">Should the candidate be 12th pass?</label>
        
        <input type="radio" name="req_twelfth" id="req_twelfth" value="yes" required>Yes
        <input type="radio" name="req_twelfth" id="req_twelfth" value="no">No<br />
        </div>

        <div class="mb-3">
        <label for="req_graduation_degree">Entire the required graduation degree(if any). Enter none in case of none</label>
        
        <select class="form-control" name="req_graduation_degree" id="req_graduation_degree" required>
            <option value="B. Tech" >B. Tech</option>
            <option value="BBA">BBA</option>
            <option value="B. Sc">B. Sc</option>
            <option value="MBBS">M.B.B.S.</option>
            <option value="B. Com">B. Com</option>
            <option value="B. Arch">B. Arch</option>
            <option value="other">Others</option>
            <option value="none" selected>None</option>
        </select><br />
        </div>
        
        <div class="mb-3">
        <label for="req_post_graduation_degree">Entire the required post graduation degree(if any). Enter none in case of none</label>
        
        <select class="form-control" name="req_post_graduation_degree" id="req_post_graduation_degree" required>
            <option value="M. Tech" selected>M. Tech</option>
            <option value="MBA">MBA</option>
            <option value="M. Sc">M. Sc</option>
            <option value="MD">M.D.</option>
            <option value="M. Com">M. Com</option>
            <option value="M. Arch">M. Arch</option>
            <option value="other">Others</option>
            <option value="none" selected>None</option>
        </select><br />
        </div>
        
        <div class="mb-3 mt-2">
        <input class="btn btn-dark form-control" type="submit" name="submit" value="Submit" />
        </div>
        </div>
    </form>
    </div>
</div>